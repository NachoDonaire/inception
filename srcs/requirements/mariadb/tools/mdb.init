CREATE DATABASE IF NOT EXISTS $WORDPRESS_DB_NAME;

CREATE USER "'"$USER"'"@'wordpress_container' IDENTIFIED BY "'"$WORDPRESS_DB_PASSWORD"'";
GRANT ALL PRIVILEGES ON *.* TO "'"$USER"'"@'wordpress_container' WITH GRANT OPTION; FLUSH PRIVILEGES

CREATE USER "'"$PUSER"'"@'wordpress_container' IDENTIFIED BY "'"$PPSWD"'";
GRANT SELECT, INSERT, UPDATE, DELETE ON $WORDPRESS_DB_NAME.* TO "'"$PUSER"'"@'wordpress_container'; FLUSH PRIVILEGES

